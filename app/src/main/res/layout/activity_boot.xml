<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.gmail.vanyadubik.dchat.activity.BootActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wellcome_to_chat"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:layout_margin="@dimen/button_boot_margin"
            android:textSize="@dimen/text_size_big"/>

        <Button
            android:id="@+id/button_create_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/button_boot_margin"
            android:text="@string/create_chat"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_medium"/>

        <Button
            android:id="@+id/button_connect_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/button_boot_margin"
            android:text="@string/connect_chat"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_medium"/>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
